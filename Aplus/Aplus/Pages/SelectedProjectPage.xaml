<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Aplus.Pages.SelectedProjectPage"
             xmlns:local="clr-namespace:Aplus.Pages.ProjectInfoPages"
             Title="{Binding Name}">
    <TabbedPage.ToolbarItems>
        <ToolbarItem IconImageSource="edit.png" Priority="0" Order="Primary" x:Name="BtnEdit" Clicked="BtnEdit_Clicked"/>
    </TabbedPage.ToolbarItems>
    <TabbedPage.Children>
        <local:InfoProjectPage Title="О проекте"/>
        <local:ImagesProjectPage Title="Картинки"/>
        <local:ContactsProjectPage Title="Контакты"/>
    </TabbedPage.Children>
</TabbedPage>