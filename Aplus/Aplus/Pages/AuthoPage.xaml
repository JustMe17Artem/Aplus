<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Aplus.Pages.AuthoPage"
             Visual="Default">
    <ScrollView>
        <FlexLayout Direction="Column" JustifyContent="SpaceAround" AlignContent="Center" >
            <StackLayout >
                <Image Source="image.png"
                           HorizontalOptions="Center" 
                           HeightRequest="300" 
                           WidthRequest="300" />
            </StackLayout>
            <StackLayout Margin="40,30,40,30">
                <Entry Placeholder="Логин" 
                    PlaceholderColor="Gray"  
                    x:Name="ELogin" 
                    TextColor="Black"
                    BackgroundColor="#e8e8e8"
                    HeightRequest="60"
                    Margin="0,10,0,40"
                    Visual="Material"/>
                <Entry Placeholder="Пароль"
                    PlaceholderColor="Gray"
                    TextColor="Black"
                    x:Name="EPassword"
                    IsPassword="True"
                    BackgroundColor="#e8e8e8"
                    HeightRequest="60"
                    Visual="Material"/>
                <FlexLayout Direction="Row" JustifyContent="SpaceBetween" Margin="0,60,19,0">
                    <Button Text="Зарегистрироватьтся" 
                        CornerRadius="200" 
                        BackgroundColor="#00b2ff" 
                        TextColor="White" 
                        x:Name="BRegistration" 
                        Clicked="Reg_Clicked"
                        HeightRequest="60"
                        WidthRequest="220"
                        FontSize="9"
                        Margin="0,5,11,0"/>

                    <Button Text="Войти" 
                        CornerRadius="250" 
                        BackgroundColor="#00b2ff" 
                        TextColor="White" 
                        x:Name="BLogin" 
                        Clicked="Login_Clicked"
                        HeightRequest="60"
                        WidthRequest="220"
                        FontSize="9"
                        Margin="11,5,0,0"/>
                </FlexLayout>
            </StackLayout>
        </FlexLayout>
    </ScrollView>
</ContentPage>