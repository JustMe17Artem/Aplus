<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Aplus.Pages.ProjectsPage" Visual="Default" Title="
                Проекты">
    <ContentPage.ToolbarItems>
        <ToolbarItem IconImageSource="plus.png" Priority="0" Order="Primary" x:Name="AddNewProject" Clicked="AddNewProject_Clicked"/>
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout>
            <ListView x:Name="Selected_Project" 
                      ItemSelected="Selected_Project_ItemSelected"
                       ItemsSource="{Binding ProjectsList}" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>